<!DOCTYPE html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Лабораторна 5</title>
    <!-- Посилання на CSS, іконки та інші елементи -->
    <link rel="stylesheet" href="style.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/boxicons@latest/css/boxicons.min.css">
    <link rel="stylesheet" href="https://unpkg.com/swiper/swiper-bundle.min.css">
</head>
<body>
<!-- Навігація -->
<header>
    <!-- Логотип -->
    <a href="index.html" class="logo"><i class='bx bx-football'></i>Football Stats</a>
    <div class="bx bx-menu" id="menu-icon"></div>
    <!-- Навігація між вкладками-->
    <ul class="navbar">
        <li><a href="#home" class="home-active">Home</a></li>
        <li><a href="#teams">Teams</a></li>
    </ul>
    <div class="profile">
    </div>
</header>
<!-- Домашня сторінка -->
<section class="home swiper" id="home">
    <div class="swiper-wrapper">
        <!-- Cлайд1 -->
        <div class="swiper-slide container slide1">
            <div class="home-text">
                <span class="uclText">Champions league</span>
                <h1>Follow the<br>Champions League<br>matches</h1>
                <a href="champions_league.html" class="btn btn1">Watch<i class='bx bx-right-arrow-alt'></i></a>
            </div>
            <img src="img/champions_league.png" alt="">
        </div>
        <!-- Cлайд2 -->
        <div class="swiper-slide container slide2">
            <div class="home-text">
                <span class="uelText">Europa League</span>
                <h1>Follow the<br>Europa League<br>matches</h1>
                <a href="europa_league.html" class="btn btn2">Watch<i class='bx bx-right-arrow-alt'></i></a>
            </div>
            <img src="img/europa_league.png" alt="">
        </div>
        <!-- Cлайд3 -->
        <div class="swiper-slide container slide3">
            <div class="home-text">
                <span class="ueclText">Conferense League</span>
                <h1>Follow the<br>Conference League<br>matches</h1>
                <a href="conference_league.html" class="btn btn3">Watch<i class='bx bx-right-arrow-alt'></i></a>
            </div>
            <img src="img/conference_league.png" alt="">
        </div>
    </div>
    <div class="swiper-button-prev"></div>
    <div class="swiper-button-next"></div>
    <div class="swiper-pagination"></div>
</section>
<!-- "Команди" -->
<section class="teams" id="teams">
    <div class="heading">
        <h1>Popular<br><span>Teams</span></h1>
    </div>
    <!-- Контент -->
    <div class="teams-container">
        <% for (var i =0; i < clubs.length;  i++ ) { %>
            <div class="box teambox">
                <img class="teamImg" src="<%= clubs[i].clubLogo %>" alt="Real Madrid CF">
                <h2><%= clubs[i].clubName %></h2>
                <span><img class="countryImg" src="https://img.uefa.com/imgml/flags/25x25/<%= clubs[i].country %>.png" alt="<%= clubs[i].country %>"><%= clubs[i].country %></span>
            </div>
        <% } %>
    </div>
</section>
<!-- "Нижня частина" -->
<section class="footer" id="footer">
    <div class="footer-box">
        <a href="index.html" class="logo"><i class='bx bx-football'></i>Football Stats</a>
        <p>Follow us<br>on social networks</p>
        <div class="social">
            <a href="https://t.me/makoviyandriy"><i class='bx bxl-telegram'></i></a>
            <a href="https://www.instagram.com/makoviyandriy/"><i class='bx bxl-instagram'></i></a>
            <a href="https://github.com/MakVas"><i class='bx bxl-github'></i></a>
        </div>
    </div>
    <div class="footer-box">
        <h2>Navigation</h2>
        <a href="index.html">Home</a>
        <a href="all_matches.html">All matches</a>
        <a href="all_teams.html">All clubs</a>
    </div>
    <div class="footer-box">
        <h2>Tournaments</h2>
        <a href="champions_league.html">Champions League</a>
        <a href="europa_league.html">Europa League</a>
        <a href="conference_league.html">Conference League</a>
    </div>
    <div class="footer-box">
        <h2>Notifications</h2>
        <p>Receive match notifications<br>to your email</p>
        <form action="">
            <i class='bx bxs-envelope'></i>
            <input type="email" name="" id="" placeholder="Enter your email">
            <i class='bx bx-arrow-back bx-rotate-180'></i>
        </form>
    </div>
</section>
<!-- Copyright -->
<div class="copyright">
    <p>&#169; Makovii Andrii</p>
</div>
<!-- Свайпер JS -->
<script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
<!-- Посилання на JS -->
<script src="main.js"></script>
<script src="swiper.js"></script>
</body>
